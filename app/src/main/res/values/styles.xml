<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|top</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InformationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">fill_horizontal|top</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textColor">@color/header</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:gravity">center_vertical|top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>